{
  "name": "weather-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron electron/main.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "package:linux": "npm run build && electron-builder --linux deb",
    "package:win": "npm run build && electron-builder --win nsis"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "node-fetch": "^3.3.2",
    "openmeteo": "^1.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-spinners": "^0.17.0",
    "use-debounce": "^10.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.1",
    "electron-builder": ">=24.15.2",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.urvish.weatherapp",
    "productName": "WeatherApp",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "assets"
      },
      ".env"
    ],
    "linux": {
      "target": "deb",
      "category": "Utility",
      "icon": "public/weather-logo.png",
      "maintainer": "Urvish Rathi <urvishkrathi@gmail.com>",
      "description": "Minimal weather widget",
      "synopsis": "Weather widget with location support"
    },
    "win": {
      "target": "nsis",
      "icon": "public/weather-logo.ico"
    }
  }
}
